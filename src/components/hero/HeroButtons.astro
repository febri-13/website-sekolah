---
interface Button {
  text: string;
  href: string;
  icon?: string;
  variant: 'primary' | 'secondary';
}

interface Props {
  buttons: Button[];
}

const { buttons } = Astro.props;
---

<div class="flex gap-4 justify-center flex-wrap">
  {buttons.map((button) => (
    <a 
      href={button.href}
      class={
        button.variant === 'primary'
          ? 'bg-secondary-400 text-dark-700 px-8 py-3 rounded-lg font-bold hover:bg-secondary-300 transition-all shadow-lg hover:shadow-xl transform hover:-translate-y-0.5'
          : 'bg-white/20 backdrop-blur-sm border-2 border-white text-white px-8 py-3 rounded-lg font-bold hover:bg-white/30 transition-all'
      }
    >
      {button.icon} {button.text}
    </a>
  ))}
</div>
