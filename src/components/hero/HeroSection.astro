---
import HeroBadge from './HeroBadge.astro';
import HeroTitle from './HeroTitle.astro';
import HeroButtons from './HeroButtons.astro';

interface Props {
  badge?: {
    icon?: string;
    text: string;
  };
  title: {
    main: string;
    subtitle: string;
    description: string;
  };
  buttons: Array<{
    text: string;
    href: string;
    icon?: string;
    variant: 'primary' | 'secondary';
  }>;
}

const { badge, title, buttons } = Astro.props;
---

<section class="relative bg-gradient-to-br from-primary-600 via-primary-500 to-primary-700 text-white overflow-hidden">
  <!-- Decorative Elements -->
  <div class="absolute top-0 right-0 w-64 h-64 bg-secondary-400/10 rounded-full blur-3xl"></div>
  <div class="absolute bottom-0 left-0 w-96 h-96 bg-tertiary-500/10 rounded-full blur-3xl"></div>
  
  <div class="relative max-w-7xl mx-auto px-4 py-20 md:py-32">
    <div class="text-center">
      {badge && <HeroBadge icon={badge.icon} text={badge.text} />}
      
      <HeroTitle 
        mainTitle={title.main}
        subtitle={title.subtitle}
        description={title.description}
      />
      
      <HeroButtons buttons={buttons} />
    </div>
  </div>
</section>

