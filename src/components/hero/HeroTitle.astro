---
interface Props {
  mainTitle: string;
  subtitle: string;
  description: string;
}

const { mainTitle, subtitle, description } = Astro.props;
---

<div class="text-center">
  <h1 class="text-4xl md:text-6xl font-bold mb-4 leading-tight">
    {mainTitle}
  </h1>
  <p class="text-xl md:text-2xl mb-2 text-primary-100 font-light italic">
    {subtitle}
  </p>
  <p class="text-lg mb-8 text-primary-100 max-w-2xl mx-auto">
    {description}
  </p>
</div>
