---
import { sanityClient } from '../lib/sanity.ts';

interface Stat {
  _id: string;
  order: number;
  value: string;
  label: string;
  icon?: string;
  isActive: boolean;
}

// Fetch stats dari Sanity
const stats = await sanityClient.fetch<Stat[]>(
  `*[_type == "stats" && isActive == true] | order(order asc) [0...4]`
);

// Fallback kalau belum ada data di Sanity
