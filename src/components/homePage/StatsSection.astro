  { order: 2, value: '50+', label: 'Guru Berpengalaman', icon: 'ðŸ‘¨â€ðŸ«' },
  { order: 3, value: '20+', label: 'Prestasi Nasional', icon: 'ðŸ†' },
  { order: 4, value: '15', label: 'Tahun Berdiri', icon: 'ðŸ“…' },
];

const displayStats = stats.length > 0 ? stats : defaultStats;
---

<section class="py-12 bg-white dark:bg-gray-800 shadow-sm">
  <div class="max-w-7xl mx-auto px-4">
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-center">
      {displayStats.map((stat) => (
        <div key={stat._id || stat.order}>
          {stat.icon && (
            <div class="text-3xl mb-2">{stat.icon}</div>
          )}
          <div class="text-4xl font-bold text-primary-600 dark:text-primary-400 mb-2">
            {stat.value}
          </div>
          <div class="text-gray-600 dark:text-gray-400">
            {stat.label}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

