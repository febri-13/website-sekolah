  title = "Guru & Karyawan",
  subtitle = "Tim profesional yang berdedikasi untuk pendidikan terbaik",
} = Astro.props;

// Fetch teachers from Sanity
let teachers: Teacher[] = [];
try {
  teachers = await sanityClient.fetch(`
    *[_type == "teacher" && isActive == true] | order(order asc) {
      _id,
      name,
      position,
      subject,
      photo,
      description
    }
  `);
} catch (error) {
