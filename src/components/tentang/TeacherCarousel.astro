    transform: translateY(-8px) scale(1.02);
  }

  @keyframes float {
    0%, 100% {
      transform: translateY(-50%);
    }
    50% {
      transform: translateY(-50%) translateY(-4px);
    }
  }

  .carousel-prev, .carousel-next {
    animation: float 3s ease-in-out infinite;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const container = document.querySelector('.carousel-container') as HTMLElement;
    const track = container?.querySelector('.carousel-track') as HTMLElement;
    const prevBtn = document.querySelector('.carousel-prev') as HTMLElement;
    const nextBtn = document.querySelector('.carousel-next') as HTMLElement;
    const dots = document.querySelectorAll('.carousel-dot');

    if (!container || !track || !prevBtn || !nextBtn || dots.length === 0) return;

    const originalItems = Array.from(track.querySelectorAll('.carousel-item'));
    const itemCount = originalItems.length;
    
    // Clone items for infinite effect (clone last to start, first to end)
    const firstClone = originalItems[0].cloneNode(true) as HTMLElement;
    const lastClone = originalItems[itemCount - 1].cloneNode(true) as HTMLElement;
    
    track.appendChild(firstClone);
    track.insertBefore(lastClone, track.firstChild);

    let currentIndex = 0; // Real index (0-based for dots)
    let actualIndex = 1; // Actual position in DOM (starts at 1 because of clone)
    let isAnimating = false;

    const getCardWidth = () => {
      const card = track.querySelector('.teacher-card')?.parentElement;
      if (!card) return 0;
      const rect = card.getBoundingClientRect();
      const nextCard = card.nextElementSibling as HTMLElement;
      if (nextCard) {
        const nextRect = nextCard.getBoundingClientRect();
        return nextRect.left - rect.left;
      }
      return rect.width + 32;
    };

    const updateDots = () => {
      dots.forEach((dot, index) => {
        if (index === currentIndex) {
          dot.classList.add('active');
        } else {
          dot.classList.remove('active');
        }
      });
    };

    const scrollToPosition = (position: number, smooth = true) => {
      const cardWidth = getCardWidth();
      
      container.scrollTo({
        left: position * cardWidth,
        behavior: smooth ? 'smooth' : 'auto'
      });
    };

    const handleTransitionEnd = () => {
      if (actualIndex === 0) {
        // At fake first (last item clone), jump to real last
        actualIndex = itemCount;
        currentIndex = itemCount - 1;
        scrollToPosition(actualIndex, false);
      } else if (actualIndex === itemCount + 1) {
        // At fake last (first item clone), jump to real first
        actualIndex = 1;
        currentIndex = 0;
        scrollToPosition(actualIndex, false);
      }
      isAnimating = false;
      updateDots();
    };

    prevBtn.addEventListener('click', (e) => {
      e.preventDefault();
      if (isAnimating) return;
      
      isAnimating = true;
      actualIndex--;
      currentIndex = currentIndex > 0 ? currentIndex - 1 : itemCount - 1;
      
      scrollToPosition(actualIndex, true);
      
      setTimeout(handleTransitionEnd, 500);
    });

    nextBtn.addEventListener('click', (e) => {
      e.preventDefault();
      if (isAnimating) return;
      
      isAnimating = true;
      actualIndex++;
      currentIndex = currentIndex < itemCount - 1 ? currentIndex + 1 : 0;
      
      scrollToPosition(actualIndex, true);
      
      setTimeout(handleTransitionEnd, 500);
    });

    // Dot navigation
    dots.forEach((dot, index) => {
      dot.addEventListener('click', () => {
        if (isAnimating) return;
        
        isAnimating = true;
        currentIndex = index;
        actualIndex = index + 1; // +1 because of prepended clone
        
        scrollToPosition(actualIndex, true);
        
        setTimeout(() => {
          isAnimating = false;
          updateDots();
        }, 500);
      });
    });

    // Keyboard navigation
    document.addEventListener('keydown', (e) => {
      if (!container.matches(':hover')) return;
      
      if (e.key === 'ArrowLeft') {
        e.preventDefault();
        prevBtn.click();
      } else if (e.key === 'ArrowRight') {
        e.preventDefault();
        nextBtn.click();
      }
    });

    // Initialize
    currentIndex = 0;
    actualIndex = 1;
    
    // Wait for DOM and layout to be ready, then scroll to first real item
    requestAnimationFrame(() => {
      requestAnimationFrame(() => {
        scrollToPosition(actualIndex, false);
        updateDots();
      });
    });

    // Handle resize
    let resizeTimeout: number;
    window.addEventListener('resize', () => {
      clearTimeout(resizeTimeout);
      resizeTimeout = window.setTimeout(() => {
        scrollToPosition(actualIndex, false);
      }, 250);
    });
  });
</script>