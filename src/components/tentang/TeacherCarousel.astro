import { sanityClient, urlFor } from '../../lib/sanity';

interface Teacher {
  _id: string;
  name: string;
  position: string;
  subject?: string;
  photo?: any;
  description?: string;
  order?: number;
}

interface Props {
  title?: string;
  subtitle?: string;
}

